<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="Suspicious0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:src="@drawable/kojima"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>


                <TextView
                    android:id="@+id/nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HideoFalseKojima"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:src="@drawable/verificado"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

                <TextView
                    android:id="@+id/hora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:54" />


            </LinearLayout>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nuevo Silent Hill!, Desde hace mucho, se viene escuchando rumores de la presentación del tan esperado Silent Hill para PlayStation 5. Como se viene señalando, el nuevo título de la saga estaría siendo desarrollado en conjunto de Sony con Konami. Ahora pues, una nueva imagen acaba de confirma la realidad del juego. Así mismo, nos asegura que el título estará viendo la luz el próximo 2021, esto no esto ya también nos han revelado nuevos datos del juego."

                />
            <ImageView
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/silent"/>



    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="id"
                android:weight="0.3"

                />


            <TextView
                android:id="@+id/texto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="texto"
                android:weight="0.3" />

            <TextView
                android:id="@+id/usuario"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:text="Enviar" />

            <TextView
                android:id="@+id/comentarios"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:text="Comentarios" />

            <TextView
                android:id="@+id/likes"
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:text="Likes" />

        </LinearLayout>

    </LinearLayout>



    </androidx.cardview.widget.CardView>

